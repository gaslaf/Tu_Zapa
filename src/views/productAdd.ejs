<!DOCTYPE html>
<html lang="es">
    <%- include('./partials/head') %> 

<body>
    <%- include('./partials/header') %>
<main class="register">
  <h2 class="t-a-center title">Agregar un producto</h2>

  <form class="formulario" method="POST" enctype="multipart/form-data" action="/products/create">


<div class="form-cnt">
          <label for="marca">marca</i></label>
          <input class="input" type="text" name="marca" id="marca">
  
</div>

<div class="form-cnt">
  <label for="nombre">modelo</i></label>
  <input class="input" type="text" name="nombre" id="nombre">

</div>

<div class="form-cnt">
  <label for="precio">precio</i></label>
  <input class="input" type="number" name="precio" id="precio">

</div>
<div class="form-cnt">
  <label for="talle">talle</i></label>
  <input class="input" type="text" name="talle" id="talle">

</div>
<div class="form-cnt">
  <label for="descuento">descuento</label>
  <select class="input" name="descuento" id="descuento">
    <option value="0">0</option>
    <option value="5">5</option>
    <option value="10">10</option>
    <option value="15">15</option>
    <option value="20">20</option>
    <option value="25">25</option>
    <option value="30">30</option>
    <option value="50">50</option>
  </select>
</div>



</div>
<div class="form-cnt">
  <label for="color">color</i></label>

  <select class="input" name="color" id="color">
    <% colores.forEach(color => { %>
      <option value="<%- color.color%>"><%- color.color  %> </option>
    <% }) %>

  </select>

</div>
<div class="form-cnt">
  <label for="genero">genero</i></label>
  <select class="input" name="genero" id="genero">
    <option value="hombre">hombre</option>
    <option value="mujer">mujer</option>
    <option value="ninios">ninios</option>
  </select>

</div>
<div class="form-cnt">
  <label for="ajuste">ajuste</i></label>
  <select class="input" name="ajuste" id="ajuste">
    <option value="velcro">velcro</option>
    <option value="cordones">cordones</option>
  </select>

  <div class="form-cnt">
    <label for="origen">origen</i></label>
    <select class="input" name="origen" id="origen">
      <option value="nacional">nacional</option>
      <option value="importado">importado</option>
    </select>
    <div class="form-cnt">
      <label for="descripcion">descripcion</label>
      <textarea name="descripcion" id="descripcion" cols="30" rows="5">
        
      </textarea>
    </div>
    
<div class="form-cnt">
  <label for="imagenes">Imagen 1</label>
  <input type="file" name="imagenes" id="imagenes" multiple accept="image/*">

</div>


<div class="boton-log t-a-center">
  <button type="submit">Entrar</button>
</div>
  </form>
    
</main>
<%- include('./partials/footer') %>  

</body>
</html>